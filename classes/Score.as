package {	import flash.text.TextField;		public class Score extends Counter {		public var warning:Boolean;		public function Score() {			super();		}				override public function updateDisplay():void {			super.updateDisplay();			scoreDisplay.text = currentValue.toString();			textDisplay.text = currentText;						if (warning) {				textDisplay.textColor = 0xFF0000;				scoreDisplay.textColor = 0xFF0000;			}else {				textDisplay.textColor = 0xFFFFFF;				scoreDisplay.textColor = 0xFFFFFF;			}		}	}}